@page
@using suivi_des_drones.Core.Models
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    string title = "Suivi des tickets".ToUpper();
}

@functions {
    // List<Drone> Mylist = new();

    List<Drone> PrepareDroneList()
    {
        // Model.OnGet();
        return this.Model.ListOfDrones;
    }
    List<string> PrepareStatusList()
    {
        // Model.OnGet();
        return this.Model.ListOfStatus;
    }

}
<div class="text-center">
    <h1 class="display-4">@title</h1>
</div>

<div class="container">
    <div class="row align-items-start">
        <div class="col">
            Drone Status
        </div>
        <div class="col">
            <select class="form-select">
                @foreach (var status in PrepareStatusList())
                {
                    <option>@status</option>
                }
            </select>
        </div>
    </div>
</div>
<br /><br /><br />
<table class="table">
    <thead>
        <tr>
            <th>Matricule</th>
            <th>Date de creation</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in PrepareDroneList())
        {
            <tr>
                <td>@item.Matricule</td>
                <td>@item.CreationDate.ToString("dd MMMM yyyy")</td>
                <td>@item.HealthStatus.Label</td>
            </tr>
        }
    </tbody>

</table>

